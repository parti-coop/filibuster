.opinion-header[opinion]
  .container
    .jumbotron
      - if current_user.try(:is_admin?)
        .pull-right
          = link_to '삭제', opinion, method: :delete, data: { confirm: '삭제하시겠습니까?'}
      %h2.text-center
        = link_to opinion do
          “#{opinion.title}”
      .votes.text-center{  style:'margin: 40px 0' }
        %p
          %strong= opinion.votes_count
          명이 투표했습니다.
        %ul.list-inline{id: "#{dom_id(opinion)}__vote_buttons" }
          = render 'votes/vote_buttons', opinion: opinion
      .share.text-center
      - unless @opinion
        .btns
          = link_to "#{opinion.comments.count}개의 의견 보기", opinion, class: 'btn btn-block btn-primary'
